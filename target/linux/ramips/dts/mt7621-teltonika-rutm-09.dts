#include "mt7621-teltonika-rutm-common.dtsi"

/ {
	compatible = "teltonika,rutm", "mediatek,mt7621-soc";
	model = "Teltonika RUTM09";

	ext_io {
		compatible = "spi-gpio";
		#address-cells = <1>;
		#size-cells = <0>;

		gpio-sck = <&gpio 9 GPIO_ACTIVE_HIGH>;	// 74HC595 SRCLK (Serial Clock)
		gpio-mosi = <&gpio 5 GPIO_ACTIVE_HIGH>;	// 74HC595 SER (Serial)
		cs-gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;		// 74HC595 RCLK (Register Clock)
		num-chipselects = <1>;

		shift_io: shift_io@0 {
			compatible = "fairchild,74hc595";
			reg = <0>;
			gpio-controller;
			#gpio-cells = <2>;
			registers-number = <2>;
			spi-max-frequency = <10000000>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 10 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&gpio 14 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <1>; // tmp
			gpios = <&gpio 16 GPIO_ACTIVE_HIGH>;
		};

		gpio_sim_select {
			gpio-export,name = "sim_sel";
			gpio-export,output = <1>;
			gpios = <&gpio 18 GPIO_ACTIVE_LOW>;
		};

		gpio_in_1 {
			gpio-export,name = "gpio24";
			gpio-export,input = <0>;
			gpios = <&gpio 12 GPIO_ACTIVE_HIGH>;
		};

		gpio_out_1 {
			gpio-export,name = "gpio23";
			gpio-export,output = <0>;
			gpios = <&gpio 8 GPIO_ACTIVE_HIGH>;
		};

		green_eth_port_4 {
			gpio-export,name = "green:eth_port_4";
			gpio-export,output = <0>;
			gpios = <&shift_io 3 GPIO_ACTIVE_HIGH>;
		};

		green_eth_port_2 {
			gpio-export,name = "green:eth_port_2";
			gpio-export,output = <0>;
			gpios = <&shift_io 2 GPIO_ACTIVE_HIGH>;
		};

		green_eth_port_1 {
			gpio-export,name = "green:eth_port_1";
			gpio-export,output = <0>;
			gpios = <&shift_io 1 GPIO_ACTIVE_HIGH>;
		};

		green_eth_port_0 {
			gpio-export,name = "green:eth_port_0";
			gpio-export,output = <0>;
			gpios = <&shift_io 0 GPIO_ACTIVE_HIGH>;
		};

		yellow_eth_port_4 {
			gpio-export,name = "yellow:eth_port_4";
			gpio-export,output = <0>;
			gpios = <&shift_io 7 GPIO_ACTIVE_HIGH>;
		};

		yellow_eth_port_2 {
			gpio-export,name = "yellow:eth_port_2";
			gpio-export,output = <0>;
			gpios = <&shift_io 6 GPIO_ACTIVE_HIGH>;
		};

		yellow_eth_port_1 {
			gpio-export,name = "yellow:eth_port_1";
			gpio-export,output = <0>;
			gpios = <&shift_io 5 GPIO_ACTIVE_HIGH>;
		};

		yellow_eth_port_0 {
			gpio-export,name = "yellow:eth_port_0";
			gpio-export,output = <0>;
			gpios = <&shift_io 4 GPIO_ACTIVE_HIGH>;
		};

	};

	leds {
		compatible = "gpio-leds";

		led_power {
			label = "power";
			gpios = <&gpio 0 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		led_wan_sim1 {
			label = "wan_sim_1";
			gpios = <&gpio 41 GPIO_ACTIVE_HIGH>;
		};

		led_wan_sim2 {
			label = "wan_sim_2";
			gpios = <&gpio 43 GPIO_ACTIVE_HIGH>;
		};

		led_wan_eth {
			label = "wan_eth_3";
			gpios = <&gpio 42 GPIO_ACTIVE_HIGH>;
		};

		led_gen_2 {
			label = "mob_gen_2";
			gpios = <&shift_io 8 GPIO_ACTIVE_HIGH>;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&shift_io 9 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&shift_io 10 GPIO_ACTIVE_HIGH>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&shift_io 11 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; // only
		};

		led_ssid_2 {
			label = "mob_ssid_2";
			gpios = <&shift_io 12 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; // only
		};

		led_ssid_3 {
			label = "mob_ssid_3";
			gpios = <&shift_io 13 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; // only
		};

		led_ssid_4 {
			label = "mob_ssid_4";
			gpios = <&shift_io 14 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; // only
		};

		led_ssid_5 {
			label = "mob_ssid_5";
			gpios = <&shift_io 15 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer"; //only
		};

	};

};

&state_default {
	gpio {
		groups = "wdt", "jtag", "sdhci", "uart2", "uart3";
		function = "gpio";
	};
};

&switch0 {
	ports {
		port@0 {
			status = "okay";
			label = "lan1";
		};

		port@1 {
			status = "okay";
			label = "lan2";
		};

		port@2 {
			status = "okay";
			label = "lan3";
		};
	};
};
